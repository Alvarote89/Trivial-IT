<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".ModoDeJuego">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.07999998">

        <Button
            android:id="@+id/btn_PaseYJuegue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btnRuleta"
            android:text="Pase y Juegue" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <Button
            android:id="@+id/btn_Practica"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btnQLocal"
            android:text="Practica" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <Button
            android:id="@+id/btn_Multijugador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Multijugador" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
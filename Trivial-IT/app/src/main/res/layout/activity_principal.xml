<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2C2E2E"
    tools:context=".Principal">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="402dp"
        android:layout_height="273dp"
        android:layout_marginTop="4dp"
        android:contentDescription="@string/LOGGO"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/Ruleta"
        android:layout_width="384dp"
        android:layout_height="77dp"
        android:layout_marginTop="276dp"
        android:background="@drawable/boton"
        android:fontFamily="monospace"
        android:onClick="intentRuleta"
        android:text="@string/nueva_partida"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.407"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ruleta"
        android:layout_width="382dp"
        android:layout_height="76dp"
        android:layout_marginTop="356dp"
        android:background="@drawable/boton"
        android:fontFamily="monospace"
        android:text="@string/partidas_activas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.448"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ruleta2"
        android:layout_width="383dp"
        android:layout_height="78dp"
        android:layout_marginTop="436dp"
        android:background="@drawable/boton"
        android:fontFamily="monospace"
        android:text="@string/estad_sticas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.464"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ruleta3"
        android:layout_width="383dp"
        android:layout_height="80dp"
        android:layout_marginTop="516dp"
        android:background="@drawable/boton"
        android:fontFamily="monospace"
        android:text="@string/ajustes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.464"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>